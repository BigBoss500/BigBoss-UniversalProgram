<Page x:Class="Jekyll.globalPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Jekyll"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="globalPage">
    <Page.Resources>
        <Storyboard x:Key="OnLoaded1"/>
        <Storyboard x:Key="IsMouseOver"/>
    </Page.Resources>

    <Grid Background="#FF400042" Width="800">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Добро пожаловать!" HorizontalAlignment="Center" Margin="275,10,275,0" VerticalAlignment="Top" FontFamily="Mistral" FontSize="36" Foreground="White" Height="54" Width="250" Grid.ColumnSpan="2"/>
        <Button HorizontalAlignment="Left" Margin="320.6,125,0,0" VerticalAlignment="Top" Width="159" Click="Open" Height="35" Background="White" BorderBrush="{x:Null}" Grid.ColumnSpan="2" Cursor="Hand">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
            <Button.Effect>
                <DropShadowEffect BlurRadius="10" Direction="-90" ShadowDepth="2"/>
            </Button.Effect>
            <StackPanel Orientation="Horizontal">
                <Image Source="images/program/vkuserinfo.png" Margin="0,0,3,0" Width="42"/>
                <Label Content="VK User Info" FontFamily="Mistral" Padding="0" FontSize="22" FontWeight="Bold" VerticalAlignment="Center" Foreground="Black" UseLayoutRounding="False" Height="31.452" HorizontalAlignment="Center" ScrollViewer.VerticalScrollBarVisibility="Disabled" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="102"/>
            </StackPanel>
        </Button>
        <Label Content="Чтобы использовать приложение, используйте кнопки ниже." HorizontalAlignment="Left" Margin="132,69,0,0" VerticalAlignment="Top" Width="536" FontFamily="Courier New" Foreground="White" FontSize="16" Grid.ColumnSpan="2" Height="26"/>

        <Button x:Name="button" Click="Page_Random" HorizontalAlignment="Left" Margin="106,125,0,0" VerticalAlignment="Top" Width="137" Height="35" Background="White" BorderBrush="{x:Null}" Cursor="Hand" Style="{DynamicResource ButtonStyle1}">
            <StackPanel Orientation="Horizontal" Width="124" Height="31" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Source="images/program/random.png" Margin="0,0,2,0" Width="38" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Label Content="Рулетка" FontFamily="Mistral" Padding="0" FontSize="22" FontWeight="Bold" Foreground="Black" UseLayoutRounding="True" Height="31" HorizontalAlignment="Center" ScrollViewer.VerticalScrollBarVisibility="Disabled" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Center" Width="78"/>
            </StackPanel>
        </Button>

        <Button Click="Page_Convert" Style="{DynamicResource ButtonStyle1}" HorizontalAlignment="Left" Margin="182,125,0,0" VerticalAlignment="Top" Width="141" Height="35" Background="White" BorderBrush="{x:Null}" Grid.Column="1" Cursor="Hand">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Source="images/program/convert.png" Margin="0,0,3,0" Width="32"/>
                <Label Content="Конвертер" Padding="0" FontFamily="Mistral" FontSize="22" FontWeight="Bold" VerticalAlignment="Center" Foreground="Black" UseLayoutRounding="False" Height="32.952" HorizontalAlignment="Center" ScrollViewer.VerticalScrollBarVisibility="Disabled" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="81.25" Margin="0,-0.976"/>
            </StackPanel>
        </Button>
        <Button HorizontalAlignment="Left" Margin="320.6,125,0,0" Style="{DynamicResource ButtonStyle1}" VerticalAlignment="Top" Width="159" Click="Open" Height="35" Background="White" BorderBrush="{x:Null}" Grid.ColumnSpan="2" Cursor="Hand">
            <StackPanel Orientation="Horizontal">
                <Image Source="images/program/vkuserinfo.png" Margin="0,0,3,0" Width="42"/>
                <Label Content="VK User Info" FontFamily="Mistral" Padding="0" FontSize="22" FontWeight="Bold" VerticalAlignment="Center" Foreground="Black" UseLayoutRounding="False" Height="31.452" HorizontalAlignment="Center" ScrollViewer.VerticalScrollBarVisibility="Disabled" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="102"/>
            </StackPanel>
        </Button>
        <Button HorizontalAlignment="Left" Style="{DynamicResource ButtonStyle1}" Margin="321,180,0,0" VerticalAlignment="Top" Width="159" Click="Page_News" Height="35" Background="White" BorderBrush="{x:Null}" Grid.ColumnSpan="2" Cursor="Hand">
            <StackPanel Orientation="Horizontal">
                <Image Source="images/program/news.png" Margin="0,0,3,0" Width="42"/>
                <Label Content="Новости" FontFamily="Mistral" Padding="0" FontSize="22" FontWeight="Bold" VerticalAlignment="Center" Foreground="Black" UseLayoutRounding="False" Height="31.452" HorizontalAlignment="Center" ScrollViewer.VerticalScrollBarVisibility="Disabled" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="76"/>
            </StackPanel>
        </Button>

    </Grid>
</Page>
