<Page x:Class="OlibUpdater.Pages.main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OlibUpdater.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="415" d:DesignWidth="800"
      Title="Главная">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="5,0,5,0">
                <Label Content="Добро пожаловать!" FontFamily="{StaticResource OpenSans}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0,0,-4,0" FontSize="24"/>
                <Label Content="Чтобы использовать приложение, нажмите на кнопки ниже" FontFamily="{StaticResource OpenSans}" HorizontalAlignment="Center" Padding="0" Margin="0,10" FontSize="14"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Style="{StaticResource GlobalButton}" FontFamily="{StaticResource OpenSans}" Click="Roulette">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" Margin="15,0">
                                <Image Source="{StaticResource rouletteDrawingImage}"  Width="25" Margin="0,0,5,0"/>
                                <TextBlock Text="Рулетка" FontSize="20"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button Style="{StaticResource GlobalButton}" Click="Button_Click" FontFamily="{StaticResource OpenSans}" Margin="40,0,0,0">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" Margin="15,0">
                                <Image Source="{StaticResource converterDrawingImage}" Width="25" Margin="0,0,5,0" />
                                <TextBlock Text="Конвертер" FontSize="20"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button Style="{StaticResource GlobalButton}" FontFamily="{StaticResource OpenSans}" Margin="40,0,0,0" Click="dataParser">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" Margin="15,0">
                                <Image Source="{StaticResource dataparsingDrawingImage}" Width="25" Margin="0,0,5,0" />
                                <TextBlock Text="Data Parser" FontSize="20"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                    <Button Style="{StaticResource GlobalButton}" FontFamily="{StaticResource OpenSans}" Click="Autoclicker">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" Margin="15,0">
                                <Image Source="{StaticResource autoclickerDrawingImage}" Width="25" Margin="0,0,5,0" />
                                <TextBlock Text="Autoclicker" FontSize="20" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>
                <Label x:Name="SecretText" Foreground="LawnGreen" FontFamily="{StaticResource OpenSans}" FontSize="14" HorizontalContentAlignment="Center">
                    <Label.Effect>
                        <DropShadowEffect x:Name="Warning" BlurRadius="0" ShadowDepth="0" Color="LawnGreen"/>
                    </Label.Effect>
                </Label>
            </StackPanel>
        </ScrollViewer>
        <Image x:Name="TopSecret" Source="/Olib;component/Images/Personage/oriale.png" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="99"  Margin="10" Visibility="Hidden"/>
    </Grid>
</Page>
