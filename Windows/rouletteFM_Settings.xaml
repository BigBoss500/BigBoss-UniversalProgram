<Window x:Class="OlibUpdater.Windows.rouletteFM_Settings"
        x:Name="Setting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:loc="clr-namespace:OlibUpdater.Local"
        xmlns:local="clr-namespace:OlibUpdater.Windows"
        mc:Ignorable="d"
        Title="Настройки" Height="270" Width="420" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen" Background="Transparent" AllowsTransparency="True">
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="Setting" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border CornerRadius="3" Background="White" Grid.Row="0">
            <Border.Effect>
                <DropShadowEffect Direction="-90" BlurRadius="20" RenderingBias="Quality" ShadowDepth="3" Opacity="0.4"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="10,0,0,0">
                    <Image Source="../Images/Global/16.ico" Width="16" Margin="0,0,2,0"/>
                    <TextBlock Text="Olib" VerticalAlignment="Center" FontFamily="Bauhaus 93" FontSize="14"/>
                </StackPanel>
                <Border Grid.ColumnSpan="3" MouseLeftButtonDown="Drag" Background="#00000000"/>
                <Label x:Name="textHeader" Content="Настройки" Panel.ZIndex="-1" Grid.Column="1" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="14" FontFamily="{StaticResource OpenSans}" />
                <StackPanel Orientation="Horizontal" Grid.Column="2">
                    <Button Style="{DynamicResource HeadeButton}" Width="40" Background="White">
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="Button.Click">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Completed="DoubleAnimation_Completed" Storyboard.TargetName="Setting" Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                        <Image Width="16" Source="{StaticResource closeDrawingImage}"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        <Border Grid.RowSpan="2" Background="White" CornerRadius="3" Panel.ZIndex="-10" Visibility="Visible" Grid.ColumnSpan="2"/>
        <ScrollViewer Grid.Row="1" Margin="10,0" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <CheckBox x:Name="Check1" Content="{x:Static loc:Local.RouletteFXCheckBox1}" Margin="0,5" FontFamily="{StaticResource OpenSans}" />
                <CheckBox x:Name="Check2" Content="{x:Static loc:Local.RouletteFXCheckBox2}" Margin="0,5" FontFamily="{StaticResource OpenSans}"/>
                <CheckBox x:Name="Check3" Content="{x:Static loc:Local.RouletteFXCheckBox3}" Margin="0,5" FontFamily="{StaticResource OpenSans}" />
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Label Content="{x:Static loc:Local.RouletteFXSelections}" FontFamily="{StaticResource OpenSans}"/>
                    <TextBox x:Name="SelectTime" Width="190" FontFamily="{StaticResource OpenSans}" TextChanged="SelectTime_TextChanged" BorderThickness="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="3" />
                            </Style>
                        </TextBox.Resources>
                        <TextBox.Effect>
                            <DropShadowEffect Direction="-90" BlurRadius="10" RenderingBias="Quality" ShadowDepth="1" Opacity="0.4" />
                        </TextBox.Effect>
                    </TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5">
                    <Label Content="{x:Static loc:Local.RouletteFXNumber}" FontFamily="{StaticResource OpenSans}"/>
                    <TextBox x:Name="NumberItems" Width="190" FontFamily="{StaticResource OpenSans}" TextChanged="NumberItems_TextChanged" BorderThickness="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="3" />
                            </Style>
                        </TextBox.Resources>
                        <TextBox.Effect>
                            <DropShadowEffect Direction="-90" BlurRadius="10" RenderingBias="Quality" ShadowDepth="1" Opacity="0.4" />
                        </TextBox.Effect>
                    </TextBox>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
