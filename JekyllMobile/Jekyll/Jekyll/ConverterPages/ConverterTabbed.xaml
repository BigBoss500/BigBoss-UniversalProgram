    <ContentPage Title="Валюта">
        <views:CurrentyPage/>
    </ContentPage>

    <ContentPage Title="Температура">
        <views:Temperature/>
    </ContentPage>

    <ContentPage Title="Масса">
        <views:Mass/>
    </ContentPage>

    <ContentPage Title="Длина">
        <views:Length/>
    </ContentPage>

    <ContentPage Title="Давление">
        <views:Pressure/>
