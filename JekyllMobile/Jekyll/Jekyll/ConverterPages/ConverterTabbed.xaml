             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:views="clr-namespace:Jekyll.ConverterPages.Converters"
             x:Class="Jekyll.ConverterPages.ConverterTabbed"
             Title="Конвертер">
    
